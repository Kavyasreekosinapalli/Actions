package testintroduction;

import java.util.Base64;

public class EncodeDecode {

	public static void main(String[] args) {
		
		String password="KKavya@123";
		
		byte[] encrypt=Base64.getEncoder().encode(password.getBytes());
		System.out.println("encrypted password is---> "+ new String(encrypt));
		
		byte[]decrypt=Base64.getDecoder().decode(encrypt);
		System.out.println("drcrypted password is ----> "+ new String(decrypt));
		
		
	}
//utlity file if any in flower brackets 
	//ex
	//static string decryptstring=Base 64.getDecoder()
	//public static void return decrypt
}
